#add-expected-delivery-date.modal.hide.fade
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
    %h3= t('.expected_delivery_date')
  .modal-body.center
    %p= t('.enter_date')
    = form_for purchase_order, url: set_expected_delivery_purchase_order_path, html: { class: 'expected-delivery-form'} do |f|
      .datepicker.input-append.date
