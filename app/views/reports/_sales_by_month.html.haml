.widget
  .widget-head
    %h4.heading= title
  .widget-body
    = render 'period_select_form'
    %table.table.table-bordered.table-condensed.table-striped.table-primary.table-vertical-center
      %thead
        = show_months_head
      %tbody
        = show_table_row_with_currency t('reports.sales_by_day.sales_tax'), @report_by_month[:sales_inc_tax]
        = show_table_row_with_currency t('reports.sales_by_day.tax'), @report_by_month[:taxes], :class => "color"
        = show_table_row_with_currency t('reports.sales_by_day.taxable_revenue'), @report_by_month[:taxable_revenue], :class => "color"
        = show_table_row_with_currency t('reports.sales_by_day.cost_of_goods'), @report_by_month[:cost_of_goods]
        = show_table_row_with_currency t('reports.sales_by_day.gross_profit'), @report_by_month[:gross_profit], :class => "color"
        = show_table_row_with_currency t('reports.sales_by_day.refunds'), @report_by_month[:refunds]
        = show_table_row_with_currency t('reports.sales_by_day.tax_refunds'), @report_by_month[:tax_refunds]
